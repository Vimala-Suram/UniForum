<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.northeastern.uniforum.forum.controller.CourseSelectionController"
            style="-fx-background-color: white;">

    <!-- PAGE HEADER -->
    <top>
        <HBox spacing="10" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Label text="Course Selection"
                       style="-fx-text-fill: #3D348B; -fx-font-size: 24; -fx-font-weight: bold;">
                </Label>
            </children>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <children>

                <!-- Instructions -->
                <Label text="Select a department, then choose courses. Click checkboxes to select multiple courses. Your current selections are shown below. You can add or remove courses."
                       style="-fx-text-fill: #3D348B; -fx-font-size: 14px; -fx-font-weight: bold;"
                       wrapText="true"/>

                <!-- Department Selection -->
                <VBox spacing="8">
                    <children>
                        <Label text="Select Department"
                               style="-fx-text-fill: #3D348B; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="deptCombo"
                                  promptText="Choose Department"
                                  prefWidth="350"
                                  style="-fx-background-color: #F5F5F5; -fx-text-fill: #3D348B; -fx-border-color: #E0E0E0; -fx-border-radius: 4;"/>
                    </children>
                </VBox>

                <!-- Courses List for Selected Department -->
                <VBox spacing="8">
                    <children>
                        <Label text="Available Courses:"
                               style="-fx-text-fill: #3D348B; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <ScrollPane fitToWidth="true" prefHeight="300" style="-fx-background-color: transparent;">
                            <content>
                                <ListView fx:id="courseListView"
                                          prefWidth="600"
                                          style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 4;"/>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
                
                <!-- Selected Courses Display -->
                <VBox spacing="8">
                    <children>
                        <Label text="Selected Courses:"
                               style="-fx-text-fill: #3D348B; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <Label fx:id="selectedCoursesLabel"
                               text="No courses selected"
                               style="-fx-text-fill: #555555; -fx-font-size: 12px; -fx-background-color: #F5F5F5; -fx-padding: 8; -fx-background-radius: 4;"
                               wrapText="true"/>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

    <!-- BOTTOM BUTTON -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button text="Continue"
                        fx:id="nextBtn"
                        prefWidth="120"
                        style="-fx-background-color: #7678ED; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
