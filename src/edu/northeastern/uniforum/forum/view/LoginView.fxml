<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="600.0" prefWidth="1000.0" 
      xmlns="http://javafx.com/fxml/1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="edu.northeastern.uniforum.forum.controller.LoginController">

    <stylesheets>
        <URL value="@uniforum-styles.css" />
    </stylesheets>

    <AnchorPane prefWidth="350.0" style="-fx-background-color: #3D348B;">
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
                
                <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="WELCOME TO" />
                
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" 
                       text="UNIFORUM" prefWidth="200.0" alignment="CENTER"/>
            </children>
        </VBox>
    </AnchorPane>
    
    <AnchorPane prefWidth="650.0" maxWidth="Infinity" 
                style="-fx-background-color: white;">
        
        <VBox alignment="TOP_LEFT" spacing="25.0" 
              AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="100.0">
            
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3D348B;" 
                   text="Welcome Back," />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" 
                   text="Sign in to continue" />

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="Username" />
                <TextField fx:id="usernameField" prefHeight="35.0" styleClass="text-field-clean" prefWidth="350.0"/>
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="Password" />
                <PasswordField fx:id="passwordField" prefHeight="35.0" styleClass="text-field-clean" prefWidth="350.0"/>
                <AnchorPane>
                    <Button layoutY="5.0" onAction="#handleForgotPasswordAction" 
                            style="-fx-background-color: transparent; -fx-text-fill: #555555; -fx-font-size: 12px;" 
                            text="Forgot Password?" />
                </AnchorPane>
            </VBox>

            <Button fx:id="loginButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="350.0" 
                    text="Login" onAction="#handleLoginButtonAction" 
                    style="-fx-background-color: #7678ED; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8px;" >
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>
            
            <HBox alignment="CENTER_LEFT" spacing="5.0" prefWidth="350.0">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
                <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="New user?" />
                <Button onAction="#handleRegisterLinkAction" 
                        style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #7678ED;" 
                        text="Sign up" />
            </HBox>
            
            <Label fx:id="messageLabel" style="-fx-font-weight: bold; -fx-text-fill: #F35B04;"/>
            
        </VBox>
    </AnchorPane>
</HBox>