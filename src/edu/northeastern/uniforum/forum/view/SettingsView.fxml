<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: #F5F5F5;" 
            xmlns="http://javafx.com/fxml/1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="edu.northeastern.uniforum.forum.controller.SettingsController">
    
    <stylesheets>
        <URL value="@uniforum-styles.css" />
    </stylesheets>
    
    <!-- Top Navbar -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-padding: 15 30;" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefHeight="70.0">
        <children>
            <!-- Back Button -->
            <Button onAction="#handleBackAction" style="-fx-background-color: transparent; -fx-text-fill: #3D348B; -fx-font-size: 18px;" 
                   text="â† Back" />
            
            <HBox maxWidth="Infinity" HBox.hgrow="ALWAYS" />
            
            <!-- User info (right corner) -->
            <Label fx:id="usernameLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3D348B; -fx-cursor: hand;" 
                   onMouseClicked="#onUsernameClicked" />
        </children>
    </HBox>
    
    <!-- Main Content Area -->
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0" style="-fx-padding: 20;">
        
        <!-- ScrollPane to enable scrolling -->
        <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent; -fx-border-color: transparent;" 
                   HBox.hgrow="ALWAYS">
            <content>
                <!-- Main Content Card (Rounded) -->
                <VBox fx:id="mainContentArea" spacing="30.0" maxWidth="Infinity"
                      style="-fx-background-color: white; -fx-background-radius: 20px; -fx-padding: 40;" 
                      alignment="TOP_LEFT">
            <children>
                <!-- Settings Header -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3D348B;" 
                          text="Account Settings" />
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #888888;" 
                          text="Manage your account information and preferences" />
                </VBox>
                
                <!-- Profile Information Section -->
                <VBox spacing="20.0">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3D348B;" 
                          text="Profile Information" />
                    
                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="Username" />
                            <TextField fx:id="usernameField" prefHeight="40.0" styleClass="text-field-clean" 
                                     prefWidth="500.0" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="Email" />
                            <TextField fx:id="emailField" prefHeight="40.0" styleClass="text-field-clean" 
                                     prefWidth="500.0" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="LinkedIn URL" />
                            <TextField fx:id="linkedinUrlField" prefHeight="40.0" styleClass="text-field-clean" 
                                     prefWidth="500.0" promptText="https://linkedin.com/in/yourprofile" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="GitHub URL" />
                            <TextField fx:id="githubUrlField" prefHeight="40.0" styleClass="text-field-clean" 
                                     prefWidth="500.0" promptText="https://github.com/yourusername" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="Department" />
                            <TextField fx:id="departmentField" prefHeight="40.0" styleClass="text-field-clean" 
                                     prefWidth="500.0" promptText="e.g., IS, SES, DAMG, TELE" />
                        </VBox>
                    </VBox>
                </VBox>
                
                <!-- Security Section -->
                <VBox fx:id="securitySection" spacing="20.0">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3D348B;" 
                          text="Security" />
                    
                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="Current Password" />
                            <PasswordField fx:id="currentPasswordField" prefHeight="40.0" styleClass="text-field-clean" 
                                         prefWidth="500.0" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="New Password" />
                            <PasswordField fx:id="newPasswordField" prefHeight="40.0" styleClass="text-field-clean" 
                                         prefWidth="500.0" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: #3D348B;" text="Confirm New Password" />
                            <PasswordField fx:id="confirmPasswordField" prefHeight="40.0" styleClass="text-field-clean" 
                                         prefWidth="500.0" />
                        </VBox>
                    </VBox>
                </VBox>
                
                <!-- Schedule Call Button (only visible when viewing another user's profile) -->
                <HBox spacing="15.0" fx:id="scheduleCallContainer">
                    <Button fx:id="scheduleCallButton" text="Schedule a Call" onAction="#handleScheduleCall" 
                           style="-fx-background-color: #7678ED; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8px; -fx-padding: 12 30;" 
                           prefHeight="45.0" visible="false" managed="false" />
                </HBox>
                
                <!-- Action Buttons (only visible when viewing own profile) -->
                <HBox fx:id="actionButtonsContainer" spacing="15.0">
                    <Button fx:id="saveButton" text="Save Changes" onAction="#handleSaveAction" 
                           style="-fx-background-color: #7678ED; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8px; -fx-padding: 12 30;" 
                           prefHeight="45.0" />
                    <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelAction" 
                           style="-fx-background-color: transparent; -fx-text-fill: #7678ED; -fx-font-size: 16px; -fx-border-color: #7678ED; -fx-border-width: 2px; -fx-border-radius: 8px; -fx-padding: 12 30;" 
                           prefHeight="45.0" />
                </HBox>
                
                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-font-weight: bold; -fx-text-fill: #F35B04;"/>
                
                </children>
                </VBox>
            </content>
        </ScrollPane>
        
    </HBox>
    
</AnchorPane>

