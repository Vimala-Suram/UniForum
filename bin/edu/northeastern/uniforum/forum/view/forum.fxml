<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.northeastern.uniforum.forum.controller.ForumController">

    <!-- Main Content -->
    <BorderPane>

    <!-- ================= TOP: Navigation Bar ================= -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="16" style="-fx-padding: 12 20 12 20; -fx-background-color: white;">
            <children>
                <!-- Left: UniForum Logo/Name -->
                <Label style="-fx-text-fill: #3D348B; -fx-font-size: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="UniForum">
                    <HBox.margin>
                        <Insets right="20" />
                    </HBox.margin>
                </Label>
                
                <!-- Center: Search Bar with Ask Button -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 6 10 6 10; -fx-background-color: #F5F5F5; -fx-background-radius: 999; -fx-border-radius: 999; -fx-border-color: #7678ED; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="0" right="20" />
                    </HBox.margin>
                    <children>
                        <Label style="-fx-text-fill: #7678ED; -fx-font-weight: bold; -fx-background-color: rgba(118,120,237,0.1); -fx-padding: 4 10; -fx-background-radius: 999;" text="UF" />
                        <TextField fx:id="searchField" onAction="#onSearch" promptText="Find anything" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: #3D348B; -fx-prompt-text-fill: #888888; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="askButton" onAction="#onAskClicked" style="-fx-background-color: #7678ED; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 999; -fx-padding: 6 18; -fx-cursor: hand;" text="Ask" />
                    </children>
                </HBox>
                
                <!-- Right: Action Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="12">
                    <children>
                        <!-- Create Post Button -->
                        <Button fx:id="createPostButton" onAction="#onCreatePostClicked" style="-fx-background-color: #7678ED; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16 8 16; -fx-cursor: hand;" text="Create Post" />
                        
                        <!-- Username Label -->
                        <Label fx:id="usernameLabel" style="-fx-text-fill: #3D348B; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-cursor: hand;" onMouseClicked="#onProfileClicked" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- ================= LEFT: Navigation Drawer ================= -->
   	<left>
    <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-padding: 18; -fx-min-width: 220;">
        
        <!-- HOME -->
        <Button fx:id="homeNavButton" onAction="#onHomeClicked" prefHeight="43.0" prefWidth="180.0" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #3D348B; -fx-background-radius: 12; -fx-padding: 12 16; -fx-font-size: 13; -fx-cursor: hand; -fx-border-color: transparent;" text="Home" />
        
        <!-- EXPLORE -->
        <Button onAction="#onExploreClicked" prefHeight="43.0" prefWidth="180.0" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #3D348B; -fx-background-radius: 12; -fx-padding: 12 16; -fx-font-size: 13; -fx-cursor: hand; -fx-border-color: transparent;" text="Explore" />
        
        <!-- COURSES -->
        <Button onAction="#onCoursesClicked" prefHeight="43.0" prefWidth="180.0" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: #3D348B; -fx-background-radius: 12; -fx-padding: 12 16; -fx-font-size: 13; -fx-cursor: hand; -fx-border-color: transparent;" text="Courses" />

    </VBox>
</left>

    
    <!-- ================= CENTER: Posts + replies ================= -->
    <center>
        <VBox spacing="0" style="-fx-background-color: #F5F5F5;">
            <!-- Filter Strip (only visible on Explore) -->
            <HBox fx:id="filterStrip" alignment="CENTER_LEFT" spacing="16" style="-fx-padding: 12 20 12 20; -fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;" visible="false" managed="false">
                <children>
                    <!-- Community Filter -->
                    <VBox spacing="4">
                        <Label text="Community:" style="-fx-text-fill: #3D348B; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="communityFilter" promptText="All Communities" prefWidth="200" style="-fx-background-color: #F5F5F5; -fx-text-fill: #3D348B; -fx-border-color: #E0E0E0; -fx-border-radius: 4;"/>
                    </VBox>
                    
                    <!-- Tag Filter -->
                    <VBox spacing="4">
                        <Label text="Tag:" style="-fx-text-fill: #3D348B; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="tagFilter" promptText="All Tags" prefWidth="150" style="-fx-background-color: #F5F5F5; -fx-text-fill: #3D348B; -fx-border-color: #E0E0E0; -fx-border-radius: 4;"/>
                    </VBox>
                    
                    <!-- Sort By Filter -->
                    <VBox spacing="4">
                        <Label text="Sort By:" style="-fx-text-fill: #3D348B; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="sortByFilter" prefWidth="150" style="-fx-background-color: #F5F5F5; -fx-text-fill: #3D348B; -fx-border-color: #E0E0E0; -fx-border-radius: 4;"/>
                    </VBox>
                </children>
            </HBox>
            
            <!-- Posts Feed -->
            <HBox spacing="0" VBox.vgrow="ALWAYS" style="-fx-background-color: #F5F5F5;">
                <children>
                    <!-- Main Content Area (Posts Feed) -->
                    <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: #F5F5F5;">
                        <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent;">
                            <content>
                                <VBox fx:id="postContainer" spacing="8" style="-fx-padding: 16; -fx-background-color: #F5F5F5;">
                                    <!-- Post cards will be added here from controller -->
                                </VBox>
                            </content>
                        </ScrollPane>
                    </VBox>
                    
                </children>
            </HBox>
        </VBox>
    </center>

    </BorderPane>

    <!-- Modal Overlay (Hidden by default) -->
    <StackPane fx:id="modalOverlay" alignment="CENTER" visible="false" managed="false">
        <!-- Semi-transparent dark background - click to close -->
        <Region fx:id="overlayBackground" 
                style="-fx-background-color: rgba(0, 0, 0, 0.7);" 
                onMouseClicked="#onOverlayClicked" />
        
        <!-- Dialog Container -->
        <VBox fx:id="dialogContainer" alignment="CENTER" spacing="0" 
              mouseTransparent="false">
            <!-- Dialog content will be loaded here -->
        </VBox>
    </StackPane>

</StackPane>
