<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.northeastern.uniforum.forum.controller.ForumController">

    <!-- ================= TOP: Search bar ================= -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 16 10 16; -fx-background-color: #f5f5f5;">
            <children>
                <TextField fx:id="searchField" promptText="Search questionâ€¦" HBox.hgrow="ALWAYS" />
                <Button onAction="#onSearch" text="Search" />
            </children>
        </HBox>
    </top>

    <!-- ================= CENTER: Posts + replies ================= -->
    <center>
        <!-- StackPane only so we can float the pencil button -->
        <StackPane>
            <children>

                <!-- Scrollable feed -->
                <ScrollPane fitToWidth="true" pannable="true">
                    <content>
                        <VBox fx:id="postContainer" spacing="12" style="-fx-padding: 12 16 80 16; -fx-background-color: #ffffff;">
                            <!-- Post cards (with replies) will be added here from controller -->
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Floating pencil button (bottom-right) -->
                <!-- Floating pencil button (bottom-right) -->
				<Button fx:id="newPostButton" onAction="#onNewPostClicked" text="+" textAlignment="JUSTIFY" StackPane.alignment="BOTTOM_RIGHT">
				    <StackPane.margin>
				        <Insets bottom="40" right="40" />
				    </StackPane.margin>
				    <style>
				        -fx-background-radius: 32;
				        -fx-min-width: 64;
				        -fx-min-height: 64;
				        -fx-max-width: 64;
				        -fx-max-height: 64;
				        -fx-background-color: #ff7a59;
				        -fx-text-fill: white;
				        -fx-font-size: 25;
				        -fx-font-weight: bold;
				        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 4);
				    </style>
               <font>
                  <Font name="Arial" size="42.0" />
               </font>
				</Button>


            </children>
        </StackPane>
    </center>

</BorderPane>
